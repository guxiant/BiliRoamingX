<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.preference.PreferenceCategory>
        <androidx.preference.SwitchPreferenceCompat
            android:key="search_area_bangumi"
            android:summary="@string/biliroaming_search_area_summary"
            android:title="@string/biliroaming_search_area_title" />
        <androidx.preference.SwitchPreferenceCompat
            android:key="search_area_movie"
            android:summary="@string/biliroaming_search_area_movie_summary"
            android:title="@string/biliroaming_search_area_movie_title" />
        <androidx.preference.Preference
            android:fragment="app.revanced.bilibili.settings.fragments.PurifySearchTypesFragment"
            android:key="fragment_purify_search_types"
            android:title="@string/biliroaming_purify_search_types_title" />
        <androidx.preference.Preference
            android:fragment="app.revanced.bilibili.settings.fragments.FilterSearchTypeFragment"
            android:key="search_type"
            android:title="@string/biliroaming_filter_search_type_title" />
        <androidx.preference.Preference
            android:fragment="app.revanced.bilibili.settings.fragments.FilterSearchKeywordsFragment"
            android:key="search_keywords"
            android:title="@string/biliroaming_filter_search_keywords_title" />
    </androidx.preference.PreferenceCategory>
</androidx.preference.PreferenceScreen>
